{
  "compilerOptions": {
    "strict": true,
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "newLine": "LF",
    "jsx": "react",
    "skipLibCheck": true,
    "sourceMap": false,
    "baseUrl": ".",
    // 使用 pnpm 必须开启该项以获取自动完成支持
    // ref: https://github.com/Microsoft/TypeScript/issues/29806
    "preserveSymlinks": true,
    "paths": {
      "antd-x-form": ["./src/index.ts"]
    },
    "lib": ["esnext", "DOM"]
  },
  "include": ["**/*", "./.umirc.ts"],
  "exclude": ["node_modules", "lib"]
}
